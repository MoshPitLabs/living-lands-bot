# Discord
DISCORD_TOKEN=
DISCORD_GUILD_ID=

# HTTP API
HTTP_ADDR=:8000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=bot
DB_PASSWORD=
DB_NAME=livinglands
DB_SSLMODE=disable

# Redis
REDIS_URL=redis://redis:6379

# ChromaDB
CHROMA_URL=http://chromadb:8000

# Ollama
OLLAMA_URL=http://ollama:11434
LLM_MODEL=mistral:7b-instruct
EMBEDDING_MODEL=nomic-embed-text
# Timeout in seconds (should be longer than Discord's 30s window)
OLLAMA_TIMEOUT=60

# LLM Response Mode Settings
# Fast mode (conversational queries like greetings)
LLM_FAST_MAX_TOKENS=60
LLM_FAST_TEMPERATURE=0.5

# Standard mode (simple questions without RAG)
LLM_STANDARD_MAX_TOKENS=120
LLM_STANDARD_TEMPERATURE=0.6

# Deep mode (technical questions with RAG context)
LLM_DEEP_MAX_TOKENS=180
LLM_DEEP_TEMPERATURE=0.7

# Hytale Integration
HYTALE_API_SECRET=
VERIFY_CODE_EXPIRY=600

# Bot behavior
RATE_LIMIT_PER_MINUTE=5
MAX_CONTEXT_MESSAGES=10
LOG_LEVEL=info
PERSONALITY_FILE=configs/personality.yaml
