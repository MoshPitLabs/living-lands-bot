# Discord Configuration
DISCORD_TOKEN=${DISCORD_TOKEN:-your-token-here}
DISCORD_GUILD_ID=${DISCORD_GUILD_ID:-your-guild-id-here}

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=bot
DB_PASSWORD=livinglands_secure_password_change_me
DB_NAME=livinglands
DB_SSLMODE=disable

# Redis Configuration
REDIS_URL=redis://redis:6379

# HTTP Server
HTTP_ADDR=:8000

# Chroma Vector Database
CHROMA_URL=http://chromadb:8000

# Ollama LLM Configuration
OLLAMA_URL=http://ollama:11434
LLM_MODEL=phi
EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=60

# LLM Generation Parameters (optimized for phi)
LLM_FAST_MAX_TOKENS=40
LLM_FAST_TEMPERATURE=0.4

LLM_STANDARD_MAX_TOKENS=80
LLM_STANDARD_TEMPERATURE=0.5

LLM_DEEP_MAX_TOKENS=120
LLM_DEEP_TEMPERATURE=0.6

# Bot Configuration
RATE_LIMIT_PER_MINUTE=10
LOG_LEVEL=info
PERSONALITY_FILE=configs/personality.yaml

# Hytale Integration
HYTALE_API_SECRET=your-secret-here
VERIFY_CODE_EXPIRY=600
